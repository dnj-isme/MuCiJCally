<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/music_cover_playcomp"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:src="@drawable/discover_song"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_title_playcomp"
        android:layout_width="270sp"
        android:layout_height="32.5sp"
        android:layout_marginStart="12dp"
        android:padding="2sp"
        android:text="@string/dummy"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/music_cover_playcomp"
        app:layout_constraintTop_toTopOf="@+id/music_cover_playcomp" />

    <TextView
        android:id="@+id/music_artist_playcomp"
        android:layout_width="270sp"
        android:layout_height="32.5sp"
        android:padding="2sp"
        android:text="@string/dummy"
        android:textColor="@color/last_played_comp_artist"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/music_cover_playcomp"
        app:layout_constraintEnd_toEndOf="@+id/music_title_playcomp"
        app:layout_constraintStart_toStartOf="@+id/music_title_playcomp"
        app:layout_constraintTop_toBottomOf="@+id/music_title_playcomp" />

</androidx.constraintlayout.widget.ConstraintLayout>