<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="5sp"
    >

    <ImageView
        android:id="@+id/playlist_item_imageview"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:src="@drawable/rounded_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_item_title"
        android:layout_width="244dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toEndOf="@+id/playlist_item_imageview"
        app:layout_constraintTop_toTopOf="@+id/playlist_item_imageview" />

    <TextView
        android:id="@+id/playlist_item_uploader"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:text="@string/playlist_uploader_const"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/playlist_item_title"
        app:layout_constraintStart_toStartOf="@+id/playlist_item_title"
        app:layout_constraintTop_toBottomOf="@+id/playlist_item_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bottom_border"
        app:layout_constraintTop_toBottomOf="@+id/playlist_item_uploader"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>